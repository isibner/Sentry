<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="text-center"><code>// TODO</code></h1>
    </div>
  </div>

  <div class="row mt centered">
    <div class="col-lg-6 col-lg-offset-3">
      <h1>Your Github Repos</h1>
      <hr>
    </div>
  </div>
  


  <div class="row">
    <div class="col-xs-offset-4 col-xs-4">
      {{#each userRepos}}
        <div class="row mt centered">

          <div class="col-sm-3 col-sm-offset-3">
            <h4>{{name}}</h4>
          </div>

          <div class="col-sm-3">
            <button data-repo="{{name}}" data-action="add" class="btn btn-default btn-repo"><i class="fa fa-plus"></i> Add</button>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

</div>