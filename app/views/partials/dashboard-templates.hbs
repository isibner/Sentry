<script type="text/template" id="source-provider-template-unauthenticated">
    <div class="panel panel-default">
      <div class="panel-heading" role="tab" id="<%= name %>">
        <h4 class="panel-title">
          <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse-<%= name %>" aria-expanded="true" aria-controls="collapse-<%= name %>">
            <h3><%= displayName %></h3>
          </a>
        </h4>
      </div>
      <div id="collapse-<%= name %>" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="<%= name %>">
        <div class="panel-body">
          <a href="<%= authEndpoint %>" class="btn btn-lg btn-social btn-github">
            <img class="repo-icon" src="<%= iconURL %>">Authenticate
          </a>
        </div>
      </div>
    </div>
</script>

<script type="text/template" id="source-provider-template-authenticated">
    <div class="panel panel-default">
      <div class="panel-heading" role="tab" id="<%= name %>">
        <h4 class="panel-title">
          <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse-<%= name %>" aria-expanded="true" aria-controls="collapse-<%= name %>">
            <h3><%= displayName %></h3>
          </a>
        </h4>
      </div>
      <div id="collapse-<%= name %>" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="<%= name %>">
        <div class="panel-body">
          <div class="repo-list-container"></div>
        </div>
      </div>
    </div>
</script>

<script type="text/template" id="repo-template-active">
  <div class="repoName row">
    <div class="col-sm-3"><span class="name"><%= name %></span></div>
    <div class="col-sm-9">
      <span class="label label-success">Active</span>
      <a href="/repos/deactivate/<%= encodeURIComponent(sourceProviderName) %>/<%= encodeURIComponent(id) %>">
        <span class="label label-default deactivate"><span class="fa fa-warning"></span>&nbsp;&nbsp;Deactivate</span>
      </a>
    </div>
  </div>
  <!-- maybe a row goes here -->
  <div class="col-sm-12">
    <div class="well well-sm">
      <h4>Services</h4>
      <div class="services-container"></div>
    </div>
  </div>
</script>

<script type="text/template" id="repo-template-inactive">
  <div class="repoName row">
    <div class="col-sm-3"><span class="name"><%= name %></span></div>
    <div class="col-sm-9">
      <span class="label label-danger">Not active</span>
      <a href="/repos/activate/<%= encodeURIComponent(sourceProviderName) %>/<%= encodeURIComponent(id) %>">
      <span class="label label-default activate"><span class="fa fa-plus"></span>&nbsp;&nbsp;Activate</span></a>
    </div>
  </div>
</script>

<script type="text/template" id="service-template-active">
  <a href="/services/deactivate/<%= encodeURIComponent(sourceProviderName) %>/<%= encodeURIComponent(id) %>/<%= encodeURIComponent(NAME) %>" class="btn btn-default btn-primary btn-deactivate">Dectivate <% DISPLAY_NAME %></a>
</script>

<script type="text/template" id="service-template-inactive">
  <a href="/services/activate/<%= encodeURIComponent(sourceProviderName) %>/<%= encodeURIComponent(id) %>/<%= encodeURIComponent(NAME) %>" class="btn btn-default btn-primary btn-activate">Activate <% DISPLAY_NAME %></a>
</script>
